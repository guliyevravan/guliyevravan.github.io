<div class="border border-gray-400 rounded-xl bg-gray-100 p-3 h-full">
  
  <h3>İşlərim</h3>

  <div class="flex flex-col gap-2">

    {% for portfolio in collections.portfolio %}

    {% set link =  portfolio.url or portfolio.data.url or false %}
    {% set name =  portfolio.data.name %}
    {% set logo =  portfolio.data.logo %}

    <article>

      <a 
        href="{{ link or '#' }}"
        target="{% if link and link == portfolio.data.url %}_blank{% else %}_self{% endif %}"
        class="flex items-center gap-3 border border-transparent rounded-sm p-1 hover:border-gray-400 active:ring-1">

        {% if logo %}
        <div class="w-5 shrink-0">
          <img src="{{ logo }}">
        </div>
        {% endif %}

        <div class="align-top text-sm">
          {{ name }}
        </div>

      </a>
    </article>

    {% endfor %}
  </div>
</div>